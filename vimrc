syntax enable

set t_Co=16
set background=dark
colorscheme solarized

set mouse=a

set number

set splitbelow
set splitright

set foldmethod=marker

"force jk mapping for normal mode
inoremap jk <esc>
inoremap <esc> <nop>

"dont let arrow keys be used at all
noremap <left> <nop>
noremap <right> <nop>
noremap <up> <nop>
noremap <down> <nop>




